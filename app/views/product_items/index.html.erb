<h2> Carrinho de compras </h2>
<% if @shopping_cart.empty? %>
  <span> Seu carrinho está vazio </span>
<% else %>
  <h3>Produtos selecionados:</h3>
  
    <table class = "table table-striped table-hover ">
      <thead>
        <tr>
          <th>Produto</th>
          <th>Quantidade</th>
          <th> Preço unitário </th>
          <th>Preço total</th>
        </tr>
      </thead>
      
      <tbody>
        <% @shopping_cart.each do |product| %>
        <tr>
          <td> <%= product.product_model.name %> </td>
         <td>
          <%= button_to '-', reduce_quantity_customer_product_item_path(product.customer_id, product.id), method: :patch %>
          <%= product.quantity %> 
          <%= button_to '+', sum_quantity_customer_product_item_path(product.customer_id, product.id), method: :patch %>
        </td>
          <td> <%= number_with_precision(product.product_model.current_price, precision: 2)  %> </td>
          <td> <%= product.calculate_total_product_values %></td>
          <td> <%= button_to 'Remover', customer_product_item_path(product.customer_id, product.id), method: :delete %> </td>          
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class = "container fluid bg-dark text-white col-sm-1 col-md-1 text-center b-1 border-radius">
      Valor total <%= number_with_precision(@total_value, precision: 2) %>
    </div>
    <%= link_to 'Finalizar pedido', new_customer_order_path(current_customer.id) %>     
    <%= button_to 'Limpar carrinho', remove_all_customer_product_items_path(current_customer.id), method: :delete %>     
  <% end %>

  