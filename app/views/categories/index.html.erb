<div class="container text-center mb-2">
  <h2 class="text-center display-4 mb-5">Categorias</h2>
  <% if @categories.empty? %>
    <p> Não existem categorias cadastradas </p>
  <% end %>
  <div class="container mb-2">
    <%= link_to 'Nova Categoria', new_category_path, :class => "btn btn-primary" %>
  </div>
  <div class="col">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th><%= Category.human_attribute_name(:name)%></th>
          <th><%= Category.human_attribute_name(:status)%></th>
          <th> Editar </th>
          <th> Ação </th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do | category |%>
          <tr>
            <td><%= link_to category.name, category %></td>
            <td><%= Category.human_attribute_name(category.status) %></td>
            <td><%= link_to 'Editar Categoria', edit_category_path(category) %></td>
            <td>
              <% if category.enabled? %>
                <%= button_to 'Desativar', disable_category_path(category), method: :patch %>
              <% else %>
                <%= button_to 'Ativar', enable_category_path(category), method: :patch %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
