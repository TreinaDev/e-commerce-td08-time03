<div class="form-promotions">
  <h2>Cadastro de nova promoção:</h2>
  <%= form_with(model: @promotion) do |f| %>
    <div>
      <%= f.label(:name) %>
      <span> <%= @promotion.errors.full_messages_for(:name).to_sentence if @promotion.errors[:name] %> </span>
      <%= f.text_field(:name) %>
    </div>
    <div>
      <%= f.label(:start_date) %>
      <span> <%= @promotion.errors.full_messages_for(:start_date).to_sentence if @promotion.errors[:start_date] %> </span>
      <%= f.date_field(:start_date) %>
    </div>
    <div>
      <%= f.label(:end_date) %>
      <span> <%= @promotion.errors.full_messages_for(:end_date).to_sentence if @promotion.errors[:end_date] %> </span>
      <%= f.date_field(:end_date) %> 
    </div>
    <div>
      <%= f.label(:max_quantity) %>
      <span> <%= @promotion.errors.full_messages_for(:max_quantity).to_sentence if @promotion.errors[:max_quantity] %> </span>
      <%= f.number_field(:max_quantity) %>
    </div>
    <div>
      <%= f.label(:discount_percent) %>
      <span> <%= @promotion.errors.full_messages_for(:discount_percent).to_sentence if @promotion.errors[:discount_percent] %> </span>
      <%= f.number_field(:discount_percent) %>
    </div>
    <div>
      <%= f.label(:max_discount_money) %>
      <span> <%= @promotion.errors.full_messages_for(:max_discount_money).to_sentence if @promotion.errors[:max_discount_money] %> </span>
      <%= f.number_field(:max_discount_money) %>
    </div>
    <p> <%= f.label :sub_category_ids, 'Selecione as categorias que deseja aplicar promoção:' %> </p>
     <span> <%= @promotion.errors.full_messages_for(:sub_category_ids).to_sentence if @promotion.errors[:sub_category_ids] %> </span>
    <div class="form-checkboxes">
      <%= f.collection_check_boxes(:sub_category_ids, @sub_categories, :id, :name) do |b| %>
        <%= b.label class:"subcategory" do %>
        <%= b.check_box class:"box" %>  <%= b.text  %>
        <% end %>
      <% end %>
    </div>
    <p style="padding: 15px 0 0 80px"><%= f.submit %></p>
  <% end %>
</div>
