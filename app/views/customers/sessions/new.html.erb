<section class="d-flex flex-column vh-100">
  <div class="d-flex m-auto shadow-lg p-5 flex-column w-50">
    <h3 class="mb-3">Entrar</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-floating mb-2">
        <%= f.email_field :email, class: 'form-control', placeholder: 'name@example.com', autofocus: true, autocomplete: 'email' %>
        <%= f.label :email %><br />
      </div>
      <div class="field form-floating">
        <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Senha', class: 'form-control' %>
        <%= f.label :password %><br />
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'mt-3' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Entrar", class: 'w-100 btn btn-lg btn-primary fw-bolder mt-2' %>
      </div>
    <% end %>
    <%= render "customers/shared/links" %>
  </div>
</section>
