<section id="customer-info">
  <h2 class="text-center display-4 mb-5">Compra de créditos em Rubi </h2>
  <div class="d-flex justify-content-center text-center">
    <div class="card text-dark bg-light mb-3" style="width: 20rem;">
      <div class="card-body">
        <h5 class="card-title">Saldo atual RB<%= current_customer.balance %></h5>
        <p class="card-text mt-5">A cotação do Rubi no dia de hoje é: 1RB equivale a <%= number_to_currency(@rate) %></p>
        <%= form_with do |f| %>
          <p class="card-text">
            <%= f.label :real_amount, 'Valor em reais' %>
            <%= f.number_field :real_amount %>
            <%= f.submit 'Comprar', :class => "btn btn-primary mt-3" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
      
