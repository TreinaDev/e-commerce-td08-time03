<section>
  <h1>Cadastro de produto</h1>
  <p>Informe as caracteristicas do produto</p>
  <% if(@product_model.errors.any?) %>
    <p>Preencha corretamente o formul√°rio</p>
    <ul>
      <% @product_model.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model:(@product_model) do |f| %>
    <div>
      <%= f.label :name %>:
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :brand %>:
      <%= f.text_field :brand %>
    </div>
    <div>
      <%= f.label :model %>:
      <%= f.text_field :model %>
    </div>
    <div>
      <%= f.label :description %>:
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :sku %>:
      <%= f.text_field :sku %>
    </div>
    <div>
      <%= f.label :height %>:
      <%= f.number_field :height, step: 0.1 %>
    </div>
    <div>
      <%= f.label :width %>:
      <%= f.number_field :width, step: 0.1 %>
    </div>
    <div>
      <%= f.label :length %>:
      <%= f.number_field :length, step: 0.1 %>
    </div>
    <div>
      <%= f.label :weight %>:
      <%= f.number_field :weight, step: 0.1 %>
    </div>
    <div>
      <%= f.label :sub_category_id, Category.model_name.human %>
      <%= f.collection_select :sub_category_id, @subcategories, :id, :full_description %>
    </div>
    <div>
      <%= f.label :fragile %>
      <%= f.check_box :fragile %>
    </div>
    <div>
      <%= f.submit 'Cadastrar' %>
    </div>
  <% end %>
</section>
