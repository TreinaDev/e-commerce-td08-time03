<section id = 'product_model-customer'>
   <h1>Detalhes sobre o produto: <%= @product_model.name %></h1>
   <div>
      <dl>
         <div class="card-images">
            <% if @product_model.photos.attached? %>
               <% @product_model.photos.each do |photo|%>
                  <div class="img-container">
                        <%= image_tag photo, :class => "img-photo"%>
                  </div>
               <% end %>
            <% end %>
         </div> 
         <dt><%= ProductModel.model_name.human %>:</dt>
         <dd><%= @product_model.name %></dd>
         <dt><%= ProductModel.human_attribute_name(:brand) %>:</dt>
         <dd><%= @product_model.brand %></dd>
         <dt><%= ProductModel.human_attribute_name(:model) %>:</dt>
         <dd><%= @product_model.model %></dd>
         <dt><%= Category.model_name.human %>:</dt>
         <dd><%= @product_model.sub_category.full_description %></dd>
         <dt><%= ProductModel.human_attribute_name(:description) %>:</dt>
         <dd><%= @product_model.description %></dd>
         <dt><%= ProductModel.human_attribute_name(:dimension) %>:</dt>
         <dd><%= @product_model.height %>m x <%= @product_model.width %>m x <%= @product_model.length %>m</dd>
         <dt><%= ProductModel.human_attribute_name(:weight) %>:</dt>
         <dd><%= @product_model.weight %>kg</dd>
         <dt><%= ProductModel.human_attribute_name(:sku)%>:</dt>
         <dd><%= @product_model.sku %></dd>
         <dt><%= ProductModel.human_attribute_name(:fragile)%>?</dt>
         <% if @product_model.fragile == true %>
            <dd><%=  ProductModel.human_attribute_name(:true) %></dd>
         <% else %>
            <dd><%=  ProductModel.human_attribute_name(:false) %></dd>
         <% end %>
         <dt><%= ProductModel.human_attribute_name(:price)%>:</dt>
         <dd><%= number_to_currency(@product_model.product_prices.first.price) %></dd>
      </dl>
   </div>

   <div>
      <% if customer_signed_in? %>
         <%= form_with url: customer_product_items_path(current_customer.id) do |f| %>
         <%= f.label :quantity, 'Quantidade' %>
         <%= f.number_field :quantity %>
         <%= f.hidden_field :product_model_id, value: @product_model.id %>
         <%= f.submit 'Adicionar ao carrinho' %>
      <% end %>
      <% else%>
         <%= link_to 'Adicionar ao carrinho', new_customer_session_path %>
      <% end %>
   </div>
</section>
