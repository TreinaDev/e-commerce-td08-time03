<div>
    <h1>Produtos cadastrados:</h1>
    <% if @product_models.any? %>
      <% @product_models.each do |product| %>
        <dl>
          <dt>Produto:</dt>
          <dd><%= link_to product.name, product %></dd>
          <dt>Marca:</dt>
          <dd><%= product.brand %></dd>
          <dt>Modelo:</dt>
          <dd><%= product.model%></dd>
          <dt>SKU:</dt>
          <dd><%= product.sku %></dd>
        </dl>
      <% end %>
    <% else %>
      <p>NÃ£o existem produtos cadastrados</p>
    <% end %>
</div>