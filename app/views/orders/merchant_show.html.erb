<div>
  <h1> Detalhes do pedido <%= @order.code %> </h1>
  <p>Status: <%= Order.human_attribute_name(@order.status) %></p>
  <h5> Dados do cliente </h5>
  <div>
    <p> Nome do cliente: <%= @order.customer.name %> </p>
    <p> E-mail do cliente: <%= @order.customer.email %> </p>
    <p> CPF/CNPJ: <%= @order.customer.registration_number %> </p>
    <p> Endereço de entrega: <%= @order.customer.full_adress %> </p>
  </div>
  <h5> Detalhes dos produtos </h5>
  <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Produto</th>
          <th>Quantidade</th>
          <th>Valor unitário</th>
          <th>Valor total</th>
        </tr>
      </thead>
      <tbody>
        <% @product_items.each do |product| %>
          <tr>
            <td><%= product.product_model.name %></td>
            <td><%= product.quantity %></td>
            <td>RB <%= number_with_precision(product.product_model.current_price, precision: 2) %></td>  
            <td>RB <%= number_with_precision(product.calculate_total_product_values, precision: 2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class = "container fluid bg-dark text-white col-sm-2 col-md-2 text-center">
      <p>Valor total do pedido: RB <%= number_with_precision @order.total_value, precision: 2 %></p>
    </div>
</div>